import java.util.Scanner;
public class Main
{
	public static void main(String args[]) {
	    int senha = 0;
	    Scanner sc = new Scanner(System.in);
	    while (true){
	        System.out.println("digite a senha");
    	    senha = sc.nextInt();
	        if (senha == 2002){
	              System.out.println("senha valida");
	              break;
	         }
	        else{
    	        System.out.println("senha invalida");
	        }
	    }
	    sc.close();
	}
}
